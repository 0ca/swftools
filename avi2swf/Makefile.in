top_builddir = ..
srcdir = @srcdir@
top_srcdir = @top_srcdir@
include ../Makefile.common

all: avi2swf

avi2swf.o: avi2swf.cc
	$(CC) `avifile-config --cflags` $< -o $@

avi2swf: avi2swf.o
	$(L) avi2swf.o -o avi2swf ../lib/librfxswf.a $(LIBS) `avifile-config --libs`

install:
	$(mkinstalldirs) $(bindir)
	$(mkinstalldirs) $(man1dir)
	@file=avi2swf;$(INSTALL_BIN);$(INSTALL_MAN1)
	
uninstall:
	@file=avi2swf;$(UNINSTALL_BIN);$(UNINSTALL_MAN1)

clean: 
	rm -f *.o *.lo *.a *.la avi2swf

